<table>
<tr>
<th>
<%= image_for(@sound, 200) %>
</th>

<th>
<div>
  <strong>タイトル:</strong>
  <%= @sound.title %>
</div>
<div>
  <strong>説明:</strong>
  <%= @sound.content %>
</div>

<br>

<p>
<%= audio_for(@sound) %>
</p>

<% if current_user.likes.find_by(sound_id: @sound.id) %>
<!--currentuserが表示している音楽のsound_idに対応するlikesを持っていたらtrueを返す-->
    <%= link_to 'いいね！を取り消す', unlike_path(@sound.id), method: :delete %>
<% else %>
    <%= link_to 'いいね！', like_path(@sound.id), method: :post %>
<% end %>

<div>
  <small>
    <!-- 投稿がいいね！されている数を表示してください -->
    <%= @sound.likes.count %>人がいいね！といっています
  </small>
</div>

<div>
<% if current_user?(@sound.user) %>
<!-- ↑current_user?ヘルパー（自作ヘルパー）を用いている -->
    <section>
        <%= link_to '編集する', edit_sound_path(@sound.id) %>
        <%= link_to '消去する', sound_path(@sound.id), method: :delete, data: { confirm: '本当に消去してもいいですか？' } %>
    </section>
<% end %>
<%= link_to '戻る', sounds_path %>
</div>
</th>
</tr>
</table>


