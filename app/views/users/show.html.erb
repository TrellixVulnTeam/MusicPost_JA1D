<% if flash[:notice].present? %>
            <p class="alert alert-success">
                <!-- ここでnoticeを表示してください -->
                <%= notice %>
            </p>
        <% end %>
        <% if flash[:alert].present? %>
            <p class="alert alert-danger">
              <!-- ここでalertを表示してください -->
                <%= alert %>
            </p>
<% end %>
<h1>マイページ</h1>

<aside class="sidebar">
  <section>
    <span class="label">ユーザー</span>
    <h3 class="user-info"><%= @user.name %></h3>
  </section>
  
  <section>
    <span class="label">メールアドレス</span>
    <h3 class="user-info"><%= @user.email %></h3>
  </section>

  <% if current_user?(@user) %>
  <!-- ↑current_user?ヘルパー（自作ヘルパー）を用いている -->
  <section>
    <small><%= link_to 'プロフィールを編集', edit_user_path(@user) %></small>
  </section>
  <% end %>

</aside>

<ul class="sounds">
  <% @user.sounds.each do |sound|%>
    <li><%= link_to sound.title, sound %></li>
  <% end %>
</ul>

